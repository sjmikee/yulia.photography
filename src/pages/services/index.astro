---
import Layout from '~/layouts/PageLayout.astro';
import ServiceCard from '~/components/widgets/ServiceCard.astro';
import RichSeo from '~/components/common/RichSeo.astro';
import Breadcrumbs from '~/components/common/Breadcrumbs.astro';

const richMetadata = {
  title: "צילומי הריון בטבע, בים וצילומי הריון צנועים | יוליה קורנסקי",
  description:
    "צילומי הריון בטבע, בים, או צילומי הריון צנועים וזוגיים. ליווי מלא, אווירה רגועה ותמונות מרגשות שנשארות לשנים.",
};

const metadata = {
  title: "צילומי הריון בטבע, בים וצילומי הריון צנועים | יוליה קורנסקי",
  description:
    "צילומי הריון בטבע, בים, או צילומי הריון צנועים וזוגיים. ליווי מלא, אווירה רגועה ותמונות מרגשות שנשארות לשנים.",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <RichSeo metadata={richMetadata} />

  <!-- Hero -->
  <section class="max-w-4xl mx-auto px-4 pt-16 pb-10 text-center">
    <h1 class="text-3xl md:text-4xl font-semibold mb-4">
      סוגי הצילומים
    </h1>
    <p class="text-gray-600 leading-relaxed">
      כל סשן צילום מותאם אישית, בקצב נעים ועם הקשבה מלאה.
      כאן תוכלי לקרוא על סוגי הצילומים שאני מציעה ולבחור את הסשן שאתם מחפשים.
    </p>
  </section>

  <Breadcrumbs
    items={[
      { label: 'דף הבית', href: '/' },
      { label: 'סוגי צילומים' }
    ]}
  />

  <!-- Services list -->
  <section class="max-w-6xl mx-auto px-4 pb-20 py-10">
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <ServiceCard 
            href="/services/pregnancy-photography"
            image={{
                src: '~/assets/images/services/pregnancy-hero.jpg',
                alt: 'צילומי הריון זוגיים בשקיעה '
            }}
        >

        <Fragment slot="title">
          צילומי הריון
        </Fragment>

        <Fragment slot="subtitle">
          סשן צילומי הריון באווירה טבעית, רגועה ומכבדת - בטבע, בים או בלוקיישן שקט, בהתאמה אישית לכל אישה.
        </Fragment>
      </ServiceCard>
    </div>
  </section>
</Layout>