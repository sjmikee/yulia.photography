              <span class="mx-2">זהבה</span>
            </footer>
          </blockquote>
        </div>
    </section>

    <CallToAction
    id="bottomCallToAction"
    actions={[
      {
        variant: 'primary',
        text: 'ווטסאפ',
        href: 'https://wa.me/972525836940',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  >
    <Fragment slot="title">
      מוכנים לשיחה?
    </Fragment>

    <Fragment slot="subtitle">
      תדברו איתי ואעזור לכם לקבל את ההחלטה הנכונה
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-page dark:bg-slate-900"></div>
    </Fragment>
    </CallToAction>

  <section class="max-w-5xl mx-auto px-4 py-10">
  <div class="grid md:grid-cols-1 gap-8 text-center">
        <div class="bg-gray-100 p-4 rounded-xl shadow intersect-once motion-safe:intersect:animate-fade motion-safe:opacity-0 intersect-quarter">
