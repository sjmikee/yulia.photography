---
import Hero from '~/components/widgets/Hero.astro';
import WhatssapCallToAction from '~/components/widgets/WhatssapCallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';
import RichSeo from '~/components/common/RichSeo.astro';

const richMetadata = {
  title: "יוליה קורן - קצת עלי | צילומי משפחה | צילומי זוגיות | בוק אישי | לייף סטייל",
  description: "מחפשים צלמת שמביאה שילוב של מקצועיות וחוויה אישית? בואו להכיר אותי ואת הדרך שלי לצילומי משפחה, זוגיות ופורטרטים אישיים. יחד ניצור זיכרון מיוחד רק בשבילכם"
}

const metadata = {
  title: 'יוליה קורן - קצת עלי | צילומי משפחה | צילומי זוגיות | בוק אישי | לייף סטייל',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <RichSeo metadata={richMetadata} />
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="נעים להכיר"
    image={{
      src: '~/assets/images/about_photo.jpg',
      alt: 'יוליה צלמת סולו, משפחה זוגיות בטבע',
    }}
  >
    <Fragment slot="title">
      אני יוליה - צלמת משפחות, זוגיות, בוקים אישיים ותדמית<br />
    </Fragment>

    <Fragment slot="subtitle">
      אני מתמחה בצילומי זוגיות, משפחה, סולו ולייף סטייל – ובעיקר בלתפוס רגעים אמיתיים שתרצו לזכור. כל סשן הוא בשבילי הזדמנות להכיר אנשים חדשים, לראות את החיבור ביניהם ולתעד אותו בצורה טבעית ונינוחה, בלי יותר מדי פוזות.
<br /><br />
אני תמיד מחפשת את האור הנכון, את הרגע הקטן שלא שמתם לב שקרה, ואת הזווית שתשאיר אתכם עם חיוך כשאתם מסתכלים על התמונות.
אומרים עליי שאני יודעת למצוא חיבור לכל אחד – וזה נכון, כי הכי חשוב לי שתהיו אתם.
<br /><br />
אני גם אמא לשניים קטנים (שאוהבים לאתגר אותי 😄), אז סבלנות, רגישות והבנה למה שקורה סביב – זה חלק בלתי נפרד ממה שאני מביאה איתי לצילומים.
אני גרה במרכז, מצלמת בעיקר באור טבעי ובאוויר הפתוח – עם ילדים, בלי ילדים, בזוג או לבד. כל מה שצריך בשביל ליצור ביחד תמונות שיש בהן רגע אמיתי.
    </Fragment>
  </Hero>
  
  <WhatssapCallToAction />
</Layout>
