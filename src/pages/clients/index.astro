---
export const prerender = false;
import Layout from "~/layouts/Layout.astro";
import RichSeo from "~/components/common/RichSeo.astro";
import LandingHeader from "~/components/widgets/LandingHeader.astro";
import ScrollToTopButton from "~/components/widgets/ScrollToTopButton.astro";
import WhatsAppButton from "~/components/widgets/WhatsAppButton.astro";

const richMetadata = {
  title: "ניהול לקוחות - יוליה קורן",
  description: "בחירת פעולה לניהול לקוחות",
};

const metadata = {
  title: "ניהול לקוחות | יוליה קורן",
  description: "בחר פעולה לניהול לקוחות",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <meta name="robots" content="noindex" />
  <RichSeo metadata={richMetadata} />
  <LandingHeader isSticky />
  <ScrollToTopButton />

  <!-- Hero Section -->
  <section class="bg-gray-50 py-16 px-6 text-center">
    <h1 class="text-3xl font-bold mb-4">ניהול לקוחות</h1>
    <p class="text-lg text-gray-700 max-w-2xl mx-auto">
      בחרי פעולה שתרצי לבצע 👇
    </p>
  </section>

  <!-- Buttons Section -->
  <section class="max-w-3xl mx-auto py-12 px-6">
    <div class="grid grid-cols-2 gap-6">
      <a href="/clients/add" class="btn-secondary flex flex-col items-center justify-center p-10 rounded-2xl shadow-lg hover:shadow-xl transition text-center text-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-plus mb-3" width="48" height="48" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0" />
          <path d="M3 21v-2a4 4 0 0 1 4 -4h4" />
          <path d="M16 11h6m-3 -3v6" />
        </svg>
        <span class="text-lg font-semibold">הוספת לקוח חדש</span>
      </a>

      <a href="/clients/add_event" class="btn-secondary flex flex-col items-center justify-center p-10 rounded-2xl shadow-lg hover:shadow-xl transition text-center text-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar-event mb-3" width="48" height="48" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M4 5h16a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-16a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2" />
          <path d="M16 3v4" />
          <path d="M8 3v4" />
          <path d="M4 11h16" />
          <rect x="8" y="15" width="2" height="2" rx="0.5" />
          <rect x="12" y="15" width="2" height="2" rx="0.5" />
        </svg>
        <span class="text-lg font-semibold">הוספת אירוע ליומן</span>
      </a>


      <a href="/clients/send_contract" class="btn-secondary flex flex-col items-center justify-center p-10 rounded-2xl shadow-lg hover:shadow-xl transition text-center text-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-send mb-3" width="48" height="48" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M10 14l11 -11" />
          <path d="M21 3l-6.5 18a0.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a0.55 .55 0 0 1 0 -1l18 -6.5" />
        </svg>
        <span class="text-lg font-semibold">שליחת חוזה ללקוח</span>
      </a>
      <a href="/clients/send_review" class="btn-secondary flex flex-col items-center justify-center p-10 rounded-2xl shadow-lg hover:shadow-xl transition text-center text-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-star mb-3" width="48" height="48" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.093 -6.253l3.093 6.253l6.9 1l-5 4.867l1.179 6.873z" />
        </svg>
        <span class="text-lg font-semibold">שליחת קישור לביקורת גוגל</span>
      </a>
    </div>
  </section>

  <!-- Footer & WhatsApp -->

  <footer class="bg-footer text-white py-8 text-center">
    <button
        aria-label="Footer Scroll to top" 
        id="scrollToTopFooter"
        class="hidden p-3 bg-gray-800/30 w-13 text-white rounded-lg shadow-md border border-white/80 backdrop-blur-sm focus-visible:outline-hidden focus-visible:ring-3 focus-visible:ring-primary dark:focus-visible:ring-gray-200 transition ease-in duration-200"
    >
        <span class="sr-only">Footer Scroll to top</span> ↑
    </button>
    <p class="mb-4 font-bold">יוליה קורן | yulia.photography</p>
    <p>פאנל ניהול לקוחות ❤️</p>
  </footer>

  <WhatsAppButton />
</Layout>