  // Bulletproof init: runs on first load and every Astro navigation, without double-binding
  function runInitOncePerSwap() {
      if (window.__ADD_EVENT_INIT_DONE__) return;
      window.__ADD_EVENT_INIT_DONE__ = true;
      initSendReview();
  }

