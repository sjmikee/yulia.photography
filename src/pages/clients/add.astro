---
export const prerender = false;

import Layout from "~/layouts/Layout.astro";
import RichSeo from "~/components/common/RichSeo.astro";
import LandingHeader from "~/components/widgets/LandingHeader.astro";
import ScrollToTopButton from "~/components/widgets/ScrollToTopButton.astro";
import WhatsAppButton from "~/components/widgets/WhatsAppButton.astro";

const richMetadata = {
  title: "יוליה קורן - הוספת לקוח",
  description: "הוספת לקוח חדש למערכת בצורה נוחה ובטוחה",
};

const metadata = {
  title: "יוליה קורן | הוספת לקוח",
  description: "הוספת לקוח חדש למערכת בצורה נוחה ובטוחה",
  ignoreTitleTemplate: true,
};

const url = new URL(Astro.url);
const success = url.searchParams.get("success") === "1";
---

<Layout metadata={metadata}>
  <meta name="robots" content="noindex" />
  <RichSeo metadata={richMetadata} />
  <LandingHeader isSticky />
  <ScrollToTopButton />

  <!-- Hero Section -->
  <section class="bg-gray-50 py-16 px-6 text-center">
    <h1 class="text-3xl font-bold mb-4">הוספת לקוח חדש</h1>
    <p class="text-lg text-gray-700 max-w-2xl mx-auto">
      אש עלייך! עוד לקוח ❤️
    </p>
  </section>

  {success && (
    <section class="max-w-xs mx-auto py-4 px-6 mb-6 bg-green-600 text-white rounded-lg text-center font-semibold">
      הלקוח נוסף בהצלחה!
    </section>
  )}

  <!-- Add Client Form -->
  <section class="max-w-4xl mx-auto py-12 px-6">
    <form method="POST" action="/api/add_client" accept-charset="UTF-8" class="space-y-6 bg-white p-8 rounded-2xl shadow-lg">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="text" name="name" placeholder="שם מלא" required class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-primary focus:outline-none"/>
        <input type="text" name="phone" placeholder="טלפון" required class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-primary focus:outline-none"/>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="email" name="email" placeholder="מייל" class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-primary focus:outline-none"/>
        <input type="number" name="price" placeholder="מחיר" required step="0.01" class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-primary focus:outline-none"/>
      </div>

      <div>
        <select name="duration" required class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-primary focus:outline-none">
          <option value="" disabled selected>סוג חבילה</option>
          <option value="1">חבילה קצרה</option>
          <option value="2">חבילה בינונית</option>
          <option value="3">חבילה ארוכה</option>
        </select>
      </div>

      <button type="submit" class="btn-primary w-full py-3 px-6 rounded-xl bg-primary text-white font-bold hover:bg-primary-dark transition">
        הוסף לקוח
      </button>
    </form>
  </section>

  <!-- Footer & WhatsApp -->

  <footer class="bg-footer text-white py-8 text-center">
    <button
        aria-label="Footer Scroll to top" 
        id="scrollToTopFooter"
        class="hidden p-3 bg-gray-800/30 w-13 text-white rounded-lg shadow-md border border-white/80 backdrop-blur-sm focus-visible:outline-hidden focus-visible:ring-3 focus-visible:ring-primary dark:focus-visible:ring-gray-200 transition ease-in duration-200"
    >
        <span class="sr-only">Footer Scroll to top</span> ↑
    </button>
    <p class="mb-4 font-bold">יוליה קורן | yulia.photography</p>
    <p>הוספת לקוח ❤️</p>
  </footer>

  <WhatsAppButton />
</Layout>