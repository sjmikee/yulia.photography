---
export const prerender = false;

import Layout from "~/layouts/Layout.astro";
import RichSeo from "~/components/common/RichSeo.astro";
import LandingHeader from "~/components/widgets/LandingHeader.astro";
import ScrollToTopButton from "~/components/widgets/ScrollToTopButton.astro";
import WhatsAppButton from "~/components/widgets/WhatsAppButton.astro";
import { PRICES } from "~/lib/pricing";

const richMetadata = {
  title: "יוליה קורנסקי - הוספת סשן ללקוח",
  description: "הוספת סשן חדש למערכת בצורה נוחה ובטוחה",
};

const metadata = {
  title: "יוליה קורנסקי | הוספת סשן ללקוח",
  description: "הוספת סשן חדש למערכת בצורה נוחה ובטוחה",
  ignoreTitleTemplate: true,
};

const url = new URL(Astro.url);
const success = url.searchParams.get("success") === "1";
const error = url.searchParams.get("error");
const phoneParam = url.searchParams.get("phone");
---

<Layout metadata={metadata}>
  <meta name="robots" content="noindex" />
  <RichSeo metadata={richMetadata} />
  <LandingHeader isSticky />
  <ScrollToTopButton />

  <!-- Hero Section -->
  <section class="bg-gray-50 py-16 px-6 text-center">
    <h1 class="text-3xl font-bold mb-4">הוספת סשן חדש</h1>
    <p class="text-lg text-gray-700 max-w-2xl mx-auto">
      אש עלייך! עוד סשן ❤️
    </p>
  </section>

  {success && (
    <section class="max-w-xs mx-auto py-4 px-6 mb-6 bg-green-600 text-white rounded-lg text-center font-semibold space-y-3">
      <div>הסשן נוסף בהצלחה!</div>
      {phoneParam && (
        <a
          href={`/clients/send_contract?phone=${phoneParam}`}
          class="inline-block bg-white text-green-700 font-bold px-4 py-2 rounded-lg hover:bg-gray-100 transition"
        >
          המשך לשליחת חוזה
        </a>
      )}
    </section>
  )}

  {error && (
    <section class="max-w-xs mx-auto py-4 px-6 mb-6 bg-red-600 text-white rounded-lg text-center font-semibold">
      {error}
    </section>
  )}

  <!-- Add Client Form -->
  <section class="max-w-4xl mx-auto py-12 px-6">
    <form method="POST" action="/api/add_session" accept-charset="UTF-8" class="space-y-6 bg-white p-8 rounded-2xl shadow-lg">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="text" name="phone" id="phone" placeholder="טלפון" required class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-primary focus:outline-none"/>
        <input type="text" readonly name="name" id="clientName" placeholder="שם" required class="border p-3 w-full rounded-lg bg-gray-100 focus:ring-2 focus:ring-primary focus:outline-none"/>
      </div>

      <div>
        <select id="session_type" name="session_type" required class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-primary focus:outline-none">
          <option value="" disabled selected>סוג הצילומים</option>
          <option value="הריון">הריון</option>
          <option value="זוגיות">זוגיות</option>
          <option value="זוגיות-אינטימי">זוגיות-אינטימי</option>
          <option value="משפחה">משפחה</option>
          <option value="שנה">שנה</option>
          <option value="תדמית">תדמית</option>
          <option value="בוק-אישי">בוק-אישי</option>
          <option value="נשיות">נשיות</option>
        </select>
      </div>

      <div>
        <select id="package_type" name="package_type" required class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-primary focus:outline-none">
          <option value="" disabled selected>חבילה</option>
          <option value="1">חבילה קצרה</option>
          <option value="2">חבילה בינונית</option>
          <option value="3">חבילה ארוכה</option>
        </select>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input id="price" type="number" name="price" placeholder="מחיר" required step="0.01" readonly class="border p-3 w-full rounded-lg bg-gray-100 focus:ring-2 focus:ring-primary focus:outline-none"/>
      </div>
      
      <input type="hidden" name="client_id" id="client_id" />

      <button type="submit" class="btn-primary w-full py-3 px-6 rounded-xl bg-primary text-white font-bold hover:bg-primary-dark transition">
        הוסף סשן
      </button>
    </form>
  </section>

  <!-- Footer & WhatsApp -->

  <footer class="bg-footer text-white py-8 text-center">
    <button
        aria-label="Footer Scroll to top" 
        id="scrollToTopFooter"
        class="hidden p-3 bg-gray-800/30 w-13 text-white rounded-lg shadow-md border border-white/80 backdrop-blur-sm focus-visible:outline-hidden focus-visible:ring-3 focus-visible:ring-primary dark:focus-visible:ring-gray-200 transition ease-in duration-200"
    >
        <span class="sr-only">Footer Scroll to top</span> ↑
    </button>
    <p class="mb-4 font-bold">יוליה קורנסקי | yulia.photography</p>
    <p>הוספת לקוח ❤️</p>
  </footer>

  <WhatsAppButton />

  <script is:inline define:vars={{ PRICING: PRICES, PHONE: phoneParam }}>
    function initAddSession() {
        const phoneInput = document.getElementById("phone");
        const nameField = document.getElementById("clientName");
        const sessionTypeEl = document.getElementById("session_type");
        const packageTypeEl = document.getElementById("package_type");
        const priceEl = document.getElementById("price");

        let lastFetchedPhone = "";
        let lookupTimeout;
        let clientId;
        const clientIdInput = document.getElementById("client_id");
        const formEl = document.querySelector("form");

        // Auto-fill phone from URL and lock field
        if (PHONE) {
          const digits = PHONE.replace(/\D/g, "");
          let formatted = digits;
          if (digits.length > 3) formatted = digits.slice(0, 3) + "-" + digits.slice(3);
          phoneInput.value = formatted;
          phoneInput.readOnly = true;
          lookupClient(digits);
        }

        phoneInput.addEventListener("input", (e) => {
            const digits = e.target.value.replace(/\D/g, "");
            let formatted = digits;
            if (digits.length > 3) formatted = digits.slice(0, 3) + "-" + digits.slice(3);
            e.target.value = formatted;

            clearTimeout(lookupTimeout);
            if (digits.length >= 10) lookupTimeout = setTimeout(() => lookupClient(digits), 400);
            else {
                nameField.value = "";
            }
        });

        async function lookupClient(phoneDigits) {
            if (phoneDigits === lastFetchedPhone) return;
            lastFetchedPhone = phoneDigits;

            nameField.value = "מחפש...";
            try {
                const res = await fetch("/api/get_client_by_phone", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ phone: phoneDigits }),
                });
                const data = await res.json();
                if (!res.ok) {
                    nameField.value = "לא נמצא לקוח";
                    clientId = null;
                    clientIdInput.value = "";
                } else {
                    nameField.value = data.name;
                    clientId = data.id;
                    clientIdInput.value = data.id;
                }
            } catch {
                nameField.value = "שגיאה בחיפוש";
            }
        }

        function updatePrice() {
        const sessionType = sessionTypeEl.value;
        const packageType = packageTypeEl.value;

        if (PRICING[sessionType] && PRICING[sessionType][packageType]) {
            priceEl.value = PRICING[sessionType][packageType];
        } else {
            priceEl.value = "";
        }
        }

        sessionTypeEl.addEventListener("change", updatePrice);
        packageTypeEl.addEventListener("change", updatePrice);

        formEl.addEventListener("submit", (e) => {
          if (!clientId) {
            e.preventDefault();
            alert("לא נבחר לקוח תקין");
            return;
          }

          if (!priceEl.value) {
            e.preventDefault();
            alert("נא לבחור סוג סשן וחבילה");
            return;
          }
        });
    }

    // Bulletproof init: runs on first load and every Astro navigation, without double-binding
    function runInitOncePerSwap() {
        if (window.__ADD_EVENT_INIT_DONE__) return;
        window.__ADD_EVENT_INIT_DONE__ = true;
        initAddSession();
    }

    // Reset flag before Astro swaps the page
    document.addEventListener("astro:before-swap", () => {
        window.__ADD_EVENT_INIT_DONE__ = false;
    });

    // Run after navigation or first load
    document.addEventListener("astro:page-load", runInitOncePerSwap);

    // Also run if this script executes on a full reload without Astro navigation
    if (document.readyState === "complete" || document.readyState === "interactive") {
        runInitOncePerSwap();
    } else {
        document.addEventListener("DOMContentLoaded", runInitOncePerSwap, { once: true });
    }
  </script>
</Layout>