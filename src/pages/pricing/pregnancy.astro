---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import WhatssapCallToAction from '~/components/widgets/WhatssapCallToAction.astro';
import Breadcrumbs from '~/components/common/Breadcrumbs.astro';


const metadata = {
  title: "מחירון צילומי הריון | יוליה קורנסקי",
  description: "מחירון צילומי הריון ולייף סטייל. חבילות צילום הריון באווירה רגועה ומחמיאה, עם דגש על נשיות, רוך וחיבור לעצמך.",
  ignoreTitleTemplate: true,
};

const breadcrumbs = [
    { url: "/pricing", name: "מחירון"},
    { url: "/pricing/pregnancy", name: "מחירון צילומי הריון"},
];
---

<Layout metadata={metadata} richMetadata={metadata} breadcrumbs={breadcrumbs}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="רוך, נשיות והתחלה חדשה"
    title="מחירון צילומי הריון"
    subtitle="צילומי הריון באווירה רגועה ומכילה, שמאפשרת לך להרגיש יפה, מחוברת ובטוחה."
    content="צילומי הריון נועדו להנציח תקופה חד-פעמית ומרגשת. הסשן מתקיים בקצב שמתאים לך, בצילומי חוץ או בסטודיו (בתוספת תשלום), עם ליווי והכוונה עדינה ליצירת תמונות נשיות, רכות ומלאות רגש."
  />

  <Breadcrumbs
    items={[
      { label: 'דף הבית', href: '/' },
      { label: 'מחירון', href: '/pricing' },
      { label: 'מחירון צילומי הריון'}
