  <Steps
    title="תהליך העבודה"
    tagline="איך הכל יראה"
    isReversed={true}
    items={[
      {
        title: 'שיחה ראשונית',
        icon: 'tabler:number-1',
      },
      {
        title: 'סגירת חבילה ותאריך',
        icon: 'tabler:number-2',
      },
      {
        title: 'תשלום מקדמה',
