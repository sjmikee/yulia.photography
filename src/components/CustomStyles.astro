---
import '@fontsource-variable/heebo';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Heebo Variable';
    --aw-font-serif: 'Heebo Variable';
    --aw-font-heading: 'Heebo Variable';

    --aw-color-primary: #E85A4F;
    --aw-color-secondary: #E85A4F;
    --aw-color-accent: #E85A4F;

    --aw-color-text-heading: #262624;
    --aw-color-text-default: #262624;
    --aw-color-text-muted: #262624 / 80%;

    --aw-color-bg-page: #F5F5F5;
    --aw-color-bg-header: #F5F5F5;
    --aw-color-bg-page-secondary: #233237;
    --aw-color-bg-footer: #233237;

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: #e4a09b;
    }
  }

  .dark {
    --aw-font-sans: 'Heebo Variable';
    --aw-font-serif: 'Heebo Variable';
    --aw-font-heading: 'Heebo Variable';

    --aw-color-primary: rgb(22, 64, 77);
    --aw-color-secondary: #E85A4F;
    --aw-color-accent: rgb(74, 78, 105);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
